@model Matslump.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Mina maträtter</h2>
<hr />
@foreach (var item in Model.Items)
{
    
<div class="row table">  
    <div class="col-md-6">
        <a href="#@item.Id" data-toggle="collapse">@item.Name</a>
        <div id="@item.Id" class="collapse">
            <div class="row">
                <div class="col-md-3">
                    <img class="img-responsive img-rounded" src="@item.Url_pic" alt="@item.Name" style="width:180px" />
                </div>
                <div class="row">
                    <div class="col-md-4">
                        @item.Description <br />@if (item.Url_recept != "#")
                        {<a href="@item.Url_recept" target="_blank">Till receptet(extern)</a>}
                    </div>

                </div>


            </div>
        </div>
    </div>
    <div class="col-md-4">
        @Html.ActionLink("Ta bort från min lista", "Delete", new { id = item.Id , page = Model.Pager.CurrentPage})
    </div>
</div>
    
}


@if (Model.Pager.EndPage > 1)
{
    <ul class="pagination">
        @if (Model.Pager.CurrentPage > 1)
        {
            <li>
                <a href="~/Myfood/index">Första</a>
            </li>
            <li>
                <a href="~/Myfood/index?page=@(Model.Pager.CurrentPage - 1)">Tidigare</a>
            </li>
        }

        @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
        {
            <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                <a href="~/Myfood/index?page=@page">@page</a>
            </li>    }

        @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
        {
            <li>
                <a href="~/Myfood/index?page=@(Model.Pager.CurrentPage + 1)">Nästa</a>
            </li>
            <li>
                <a href="~/Myfood/index?page=@(Model.Pager.TotalPages)">Sista</a>
            </li>
        }
    </ul>
}
