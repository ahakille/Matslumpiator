@model Matslump.Models.ReceptmodelsAddEditView

@{
    ViewBag.Title = "EditFood";
}

<h2>Ändra maträtt</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "" })
            <div class="">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "" })
            <div class="">
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" }, style = "width:24%" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Url_pic, htmlAttributes: new { @class = "" }) *
            <div>
                @Html.EditorFor(model => model.Url_pic, new { htmlAttributes = new { @class = "form-control" } })
                <br /><p> Exempel - http://www.ica.se/recept/torskfile-med-rodvinssas-1484/</p>
                @Html.ValidationMessageFor(model => model.Url_pic, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Url_recept, htmlAttributes: new { @class = "" }) *
            <div>
                @Html.EditorFor(model => model.Url_recept, new { htmlAttributes = new { @class = "form-control" } })
                <br /><p>Exempel -  http://www.ica.se/recept/torskfile-med-rodvinssas-1484/</p>
                @Html.ValidationMessageFor(model => model.Url_recept, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CookingtimeId, htmlAttributes: new { @class = "" }) *
            <div>
                <select class="form-control" id="cookingtime" name="cookingtime">
                    <option value="1" @if (Model.CookingtimeId == 1) { @: selected
                            }>
                        Under 15 minuter
                    </option>
                    <option value="2" @if (Model.CookingtimeId == 2) { @: selected
                            }>
                        Under 30 minuter
                    </option>
                    <option value="3" @if (Model.CookingtimeId == 3) { @: selected
                            }>
                        Under 45 minuter
                    </option>
                    <option value="4" @if (Model.CookingtimeId == 4) { @: selected
                            }>
                        Under 60 minuter
                    </option>
                    <option value="5" @if (Model.CookingtimeId == 5) { @: selected
                            }>
                        Över 60 minuter
                    </option>
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TypeOfFoodId, htmlAttributes: new { @class = "" }) *
            <div>
                <select class="form-control" id="typeoffood" name="typeoffood">
                    <option value="1" @if (Model.TypeOfFoodId == 1) { @: selected
                            }>
                        Kyckling
                    </option>
                    <option value="2" @if (Model.TypeOfFoodId == 2) { @: selected
                            }>
                        Vegetarisk
                    </option>
                    <option value="3" @if (Model.TypeOfFoodId == 3) { @: selected
                            }>
                        Fisk
                    </option>
                    <option value="4" @if (Model.TypeOfFoodId == 4) { @: selected
                            }>
                        Nöt
                    </option>
                    <option value="5" @if (Model.TypeOfFoodId == 5) { @: selected
                            }>
                        Fläsk
                    </option>
                    <option value="6" @if (Model.TypeOfFoodId == 6) { @: selected
                            }>
                        Korv
                    </option>
                    <option value="7" @if (Model.TypeOfFoodId == 7) { @: selected
                            }>
                        Kött
                    </option>
                    <option value="8" @if (Model.TypeOfFoodId == 8) { @: selected
                            }>
                        Övrigt
                    </option>
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Ica_id, htmlAttributes: new { @class = "" }) *
            <div>
                @Html.EditorFor(model => model.Ica_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ica_id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Occasions, htmlAttributes: new { @class = "" }) *
            <div>
                @Html.EditorFor(model => model.Occasions, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Occasions, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "" }) *
            <div>
                @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />@Html.ActionLink("Avbryt", "All", new { page = ViewBag.page }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

