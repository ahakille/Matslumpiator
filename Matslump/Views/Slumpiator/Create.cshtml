@model Matslump.Models.Receptmodels

@{
    ViewBag.Title = "Create";
}
<div class="container containermain">
    <h2>Ditt matförslag för vecka @ViewBag.date</h2>

    @using (Html.BeginForm())
    {
        <p>
            @Html.ActionLink("Slumpa fram ny", "Create", Model.Recept[0].Date, new { @class = "btn btn-default" })
            @if (ViewBag.check != -10)
            {<input type="submit" value="Spara veckomeny" class="btn btn-default" />}
            @Html.ActionLink("Avbryt", "index", null, new { @class = "btn btn-default" })
        </p>
        foreach (var item in Model.Recept)
        {<div class="row table">
        <div class="col-md-10">
            <a href="#@item.Id" data-toggle="collapse">@item.Date.DayOfWeek <span> - </span>  @item.Name</a>
            <div id="@item.Id" class="collapse">
                <div class="row">
                    <div class="col-md-3">
                        <img class="img-responsive img-rounded" src="@item.Url_pic" alt="@item.Name" style="width:160px" />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @item.Description <br />@if (item.Url_recept != "#")
                            {<a href="@item.Url_recept" target="_blank">Till receptet(extern)</a>}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        }







    }
</div>


