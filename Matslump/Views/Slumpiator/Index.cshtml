@model Matslump.Models.slump

@{
    ViewBag.Title = "Index";
}

<h2>Slumpiator - Översikt</h2>

<div class="row">
    <div class="col-md-5">
        @Html.ActionLink("Slumpa - Den här veckan", "create", DateTime.Now, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-4">
        @Html.ActionLink("Slumpa - Nästa vecka", "create", DateTime.Now.AddDays(7), new { @class = "btn btn-default" })
    </div>
</div>
<p>
    
  
</p>
<div class="row">


    <div class="col-md-5">
        <table>
            <tr>
                <th>
                    <h4>Den här veckan, vecka @ViewBag.date </h4>
                </th>
            </tr>
            @foreach (var item in ViewBag.thisweek)
            {
                <tr>
                    <td>
                        @item.date.DayOfWeek<span> - </span>@item.Name
                    </td>
                </tr>


            }
        </table>
    </div>
    <div class="col-md-4">
        <table>
            <tr>
                <th>
                    <h4>Nästa veckan, vecka @ViewBag.date1 </h4>
            </th>
        </tr>
        @foreach (var item in ViewBag.nextweek)
        {
            <tr>
                <td>
                    @item.date.DayOfWeek<span> - </span>@item.Name
                </td>
            </tr>


        }
    </table>
</div>

</div>


    <table id="food" style="width:40%">
        <tr>
            <th>
                <h4>Gamla veckomenyer</h4>
            <th></th>
        </tr>

        @foreach (var item in Model.list)
        {
            <tr>
                <td>
                    <a href="#@item.Weeknumber" data-toggle="collapse" class=""><h4> Vecka @item.Weeknumber</h4> </a>




                </td>
            </tr>
            <tr>
                <td>
                    <table id="@item.Weeknumber" class="collapse">
                        @foreach (var item1 in Model.recepts)
                        {
                            <tr>
                                <td>
                                    @if (item1.Weeknumbers == item.Weeknumber)
                                    {
                                    @item1.Date.DayOfWeek <span> - </span>
                                    @Html.DisplayFor(m => item1.Name)
                                }

                            </td>
                        </tr>
                        }

                    </table>




                </td>
            </tr>
        }

    </table>

<div class="col-md-12">
   
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
