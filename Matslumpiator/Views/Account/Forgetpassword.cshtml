@model Matslumpiator.Models.Accountmodels

@{
    ViewBag.Title = "Glömt lösenordet";
}
<div class="row p-3">
    <div class="col"></div>
    <div class="col-md-4 color py-3 rounded">
        <div class="col-md-auto">
            <h2>Glömt lösenordet?</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <p>Ett mail med återställningslänk kommer att skickas ut, <br />den är giltig i 3 timmar</p>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.User, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Återställ" class="btn btn-outline-dark" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col"></div>
</div>
